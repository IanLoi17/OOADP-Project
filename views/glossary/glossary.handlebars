<div class="container">
    {{#if glossaries}}
    <div class="card card-body">
        <h1 class="text-dark font-weight-bold">Glossary</h1>


        </br>
        {{#each glossaries}}
        <div class="card border-primary mb-2 w-100 mx-auto">
            <div class="card-header">
                <h5 class="card-title">Terms: {{term}}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-8">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-9">
                                <p class="font-italic">Definitions:</p>
                                <p class="text-info">
                                    {{definition}}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6 col-lg-2">
                        {{!-- <p class="font-italic"></p> --}}
                        <a href="/glossary/glossEdit/{{id}}" class="card-link" id="glosssaryEdit">
                            <i class="fas fa-pencil-alt"></i>
                            Edit
                        </a>
                        </br>
                        <a href="/glossary/delete/{{id}}" class="card-link" data-toggle="confirmation"
                            data-title="Confirm delete?" id="glossaryDelete">
                            <i class="far fa-trash-alt"></i>
                            Delete
                        </a>
                    </div>
                </div>
            </div>

        </div>
        {{/each}}
    </div>

</div>
{{else}}
<h3 class="text-danger font-weight-bold">Empty Glossary</h3>
{{/if}}


<script>
    userRole = 'Patient';

    if (userRole == '{{user.occupation}}') {  //patient
        document.getElementById('glosssaryEdit').style.display = "none";
        document.getElementById('glossaryDelete').style.display = "none";

    }

    else { //doctor
        document.getElementById('glosssaryEdit').style.display = "block";
        document.getElementById('glossaryDelete').style.display = "block";

    }
</script>