<div class="container">
    <div class="card card-body">
        <h3>Edit Glossary</h3>
        <form action="/glossary/saveEditedGlossary/{{glossary.id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="row mb-2">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="font-italic" for="term">term</label>
                        <input id="term" type="text" class="form-control" name="term" value="{{glossary.term}}"
                            required>

                    </div>
                    <div class="form-group">
                        <label class="font-italic" for="definition">Definition</label>
                        <textarea class="form-control" id="definition" name="definition"
                            rows="6">{{glossary.definition}}</textarea>
                    </div>
                </div>
            </div>
            <button type="submit" disabled style="display: none" aria-hidden="true"></button>
            <input id="butEditGlossary" class="btn btn-outline-primary" type="submit" value="Save">
        </form>
    </div>
</div>