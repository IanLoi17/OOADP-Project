        {{/each}}
    </div>
</div>

{{else}}
<div class="card card-body">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <h3 class="text-danger font-weight-bold">No medical records recorded yet</h3>
        </div>
    </div>
</div>
