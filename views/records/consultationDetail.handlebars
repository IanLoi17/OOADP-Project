{{!-- Form for patient to enter their consultation reason --}}
<div class="container">
    <div class="card-body">
        <h1 class="text-dark font-weight-bold">Enter Consultation Details</h1>
    </div>

    <div class="card card-body">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <form action="" method="post">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <label for="patientname" class="font-italic text-dark font-weight-bold">Name:</label>
                            <input type="text" id="patientname" name="patientName" class="form-control" value="{{user.name}}" readonly />
                        </div>

                        <div class="col-sm-6 col=md=6 col=lg=6">
                            <label for="patientid" class="font-italic text-dark font-weight-bold">Patient ID no:</label>
                            <input type="text" id="patientid" name="patientID" class="form-control" value="{{user.patientID}}" readonly />
                        </div>
                    </div>

                    <br>

                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <label for="consultation" class="font-italic text-dark font-weight-bold">Consultation Details:</label>
                            <textarea name="consultationDetails" id="consultation" cols="50" rows="15" class="form-control" placeholder="Eg. Fever, Sore thorat, Stomach ache, Vomiting etc." required></textarea>
                        </div>
                    </div>

                    <br>

                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <button class="btn btn-sm btn-success" action="/records/consultationDetail" type="submit">Submit</button>
                            <a href="/" role="button" class="btn btn-sm btn-danger">Skip</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>